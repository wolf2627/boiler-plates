    "version": "2.0.0",
    "tasks": [
        {
            "label": "grunt watch",
            "type": "shell",
            "command": "cd /location of the folder/workspace/grunt && grunt --force"
        },
        {
            "label": "grunt build",
            "type": "shell",
            "command": "cd /location of the folder/workspace/grunt && grunt build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}